{
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run clean1",
      "npm --prefix \"$RESOURCE_DIR\" run lint --fix",
      "cd source && npm run build && cd ..",
      "npm --prefix \"$RESOURCE_DIR\" run copyNuxt",
      "npm --prefix \"$RESOURCE_DIR\" run copyConfig"
    ]
  },
  "hosting": {
    "public": "public",
    "rewrites":[{
      "source":"**",
      "function":"ssrapp"
    }],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}
