{
  "functions": {
    "source": "source/functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build",
      "rm -rf source/functions/nuxt",
      "cp -r source/.nuxt/ source/functions/nuxt/",
      "cp -r source/nuxt.config.js source/functions/"
    ]
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ]
  }
}